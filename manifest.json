{
    "name": "Scrroll In",
    "version": "1.0",
    "description": "Never forget where you left a page",
    "permissions": [
        "tabs",
        "storage",
        "activeTab"
    ],
    "options_page": "options.html",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/favicon-16x16.png",
            "32": "images/favicon-32x32.png",
            "96": "images/favicon-192x192.png",
            "256": "images/favicon-384x384.png"
        },
        "icons": {
            "16": "images/favicon-16x16.png",
            "32": "images/favicon-32x32.png",
            "48": "images/favicon-192x192.png",
            "256": "images/favicon-384x384.png"
        }
    },
    "manifest_version": 2
}